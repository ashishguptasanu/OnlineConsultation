<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notes about why?"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:hint="@string/consultation_hint"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:paddingTop="5dp"
                            android:paddingBottom="15dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/edt_extra_info_consult"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Information"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:padding="5dp"
                            android:hint="Enter Your Full Name"
                            android:maxLines="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_marginTop="10dp"
                            android:id="@+id/edt_full_name_consult"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:padding="5dp"
                            android:hint="Enter Your Email Address"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_marginTop="10dp"
                            android:inputType="textEmailAddress"
                            android:id="@+id/edt_email_consult"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:padding="5dp"
                            android:hint="Enter Your Mobile Number"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_marginTop="10dp"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:id="@+id/edt_mobile_consult"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:padding="5dp"
                            android:hint="Enter Your Age"
                            android:maxLines="1"
                            android:inputType="numberDecimal"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_marginTop="10dp"
                            android:id="@+id/edt_age_consult"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:padding="5dp"
                            android:hint="Select Your Gender"
                            android:focusable="false"
                            android:maxLines="1"
                            android:id="@+id/gender_video_consultation"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_marginTop="10dp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:padding="5dp"
                            android:hint="Select Consultation Mode"
                            android:focusable="false"
                            android:maxLines="1"
                            android:id="@+id/mode_video_consultation"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_marginTop="10dp" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_edittext"
                            android:padding="5dp"
                            android:hint="Upload Documents (Optional)"
                            android:layout_marginBottom="10dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:layout_marginTop="10dp"
                            android:id="@+id/edt_upload_docs_consult"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="40dp">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkbox_consult"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I agree to the terms &amp; conditions."/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Request"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="#f57f17"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_gravity="bottom"
        android:textStyle="bold"
        android:id="@+id/btn_submit_consult" />
</FrameLayout>